{
  "name": "terminal-tweaker",
  "description": "Tweak your windows terminal to heart's content with this app using its beautiful interface to configure everything about the terminal.",
  "author": "nateshmbhat",
  "version": "0.1.1",
  "icon": "assets/app.ico",
  "keywords": [
    "terminal-tweaker",
    "terminal tweaker",
    "tweaker",
    "terminal",
    "windows terminal tweaker"
  ],
  "license": "GPL-3",
  "private": true,
  "homepage": "./",
  "build": {
    "appId": "com.natesh.terminal-tweaker",
    "productName": "Terminal Tweaker",
    "copyright": "Copyright Â© 2019 Natesh M Bhat",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "icon": "assets/app.ico"
    }
  },
  "scripts": {
    "build": "concurrently \"yarn build-main\" \"yarn build-renderer\"",
    "build-main": "cross-env NODE_ENV=production node --trace-warnings ./node_modules/webpack/bin/webpack --config webpack.config.main.prod.js --colors",
    "build-renderer": "cross-env NODE_ENV=production node --trace-warnings ./node_modules/webpack/bin/webpack --config webpack.config.renderer.prod.js --colors",
    "dev": "cross-env START_HOT=1 node ./internals/scripts/CheckPortInUse.js && cross-env START_HOT=1 yarn start-server-dev",
    "electron-rebuild": "electron-rebuild --parallel --force --types prod,dev,optional --version 7.1.11 --module-dir app",
    "package": "yarn build && electron-builder build",
    "package-all": "yarn build && electron-builder build -mwl",
    "package-linux": "yarn build && electron-builder build --linux",
    "package-win": "yarn build && electron-builder build --win --x64",
    "prestart": "yarn build",
    "start": "cross-env NODE_ENV=production electron ./app/",
    "start-server-dev": "cross-env NODE_ENV=development node --experimental-worker --trace-warnings ./node_modules/webpack-dev-server/bin/webpack-dev-server --config webpack.config.renderer.dev.js",
    "start-main-dev": "cross-env HOT=1 NODE_ENV=development electron ./app/main.bundle.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "easy-peasy": "^5.0.3",
    "electron-store": "^4.0.0",
    "mousetrap": "^1.6.3",
    "react": "^16.8.6",
    "react-color": "^2.17.3",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.87.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jest": "24.0.15",
    "@types/mousetrap": "^1.6.3",
    "@types/node": "^12.4.0",
    "@types/react": "^16.8.7",
    "@types/react-color": "^3.0.1",
    "@types/react-dom": "^16.8.2",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-test-renderer": "^16.8.1",
    "@types/semantic-ui": "^2.2.7",
    "@types/uuid": "^3.4.5",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "detect-port": "^1.3.0",
    "devtron": "^1.4.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.3.2",
    "electron-debug": "^3.0.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.1.0",
    "electron-rebuild": "^1.10.0",
    "nodemon": "^1.19.1",
    "string-replace-loader": "^2.3.0",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "wait-on": "^3.2.0",
    "watch": "^1.0.2",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1",
    "webpack-sources": "^1.3.0",
    "yarn": "^1.22.0"
  }
}
